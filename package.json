{
  "version": "0.5.0",
  "name": "crm-powerbi-viewer",
  "displayName": "Power BI Viewer (v0.5 beta)",
  "description": "Embed tiles and reports from Power BI into Dynamics 365 Sales and Service Forms and Dashboards.",
  "homepage": "http://crm-powerbi-viewer.heiigjen.com/",
  "license": "MIT",
  "author": "Trond Aarskog (trond<alphahere>heiigjen.com) from Heiigjen Solutions",
  "bugs": {
    "url": "https://github.com/taarskog/crm-powerbi-viewer/issues"
  },
  "private": true,
  "keywords": [
    "xrm",
    "crm",
    "d365",
    "dynamics 365",
    "powerbi"
  ],

  "scripts": {
    "watch": "gulp watch --env debug",
    "build": "gulp build --env production && powershell ./tools/packSolution.ps1",
    "build-debug": "gulp build --env debug && powershell ./tools/packSolution.ps1",
    "deploy": "npm run build && powershell ./tools/deployFiles.ps1",
    "deploy-debug": "npm run build-debug && powershell ./tools/deployFiles.ps1",
    "clean": "gulp clean"
  },
  
  "devDependencies": {
    "gulp": "3.9.1",
    "gulp-plumber": "1.1.0",
    "gulp-uglify": "3.0.0",
    "gulp-sourcemaps": "2.6.0",
    "gulp-if": "2.0.2",
    "gulp-sass": "3.1.0",
    "gulp-css-svg": "1.2.3",
    "gulp-clean-css": "3.4.2",
    "gulp-htmlmin": "3.0.0",
    "gulp-header": "1.8.8",
    "gulp-newer": "1.3.0",
    "gulp-html-replace": "1.6.2",
    "gulp-preprocess": "2.0.0",
    "gulp-tslint": "8.1.1",
    "tslint": "5.4.3",
    "minimist": "1.2.0",
    "del": "3.0.0",
    "typescript": "2.3.4",
    "browser-sync": "2.18.12",
    "bs-html-injector": "3.0.3",
    "browserify": "14.4.0",
    "tsify": "3.0.1",
    "vinyl-source-stream": "1.1.0",
    "vinyl-buffer": "1.0.0",
    "event-stream": "3.3.4",
    "babelify": "7.3.0",
    "babel-preset-es2015": "6.24.1",

    "@types/browser-sync": "latest",
    "@types/gulp": "latest",
    "@types/browserify": "latest",
    "@types/adal": "latest",
    "@types/handlebars": "latest",
    "@types/xrm": "latest"
  },

  "NOT_USE_JUST_YET": {
    "info": "When adal 1.0.15 is released swap the direct github fetch of adal to the line below (with updated version num). Need to wait as 1.0.14 fails on token refresh",
    "adal-angular": "1.0.15"
  },

  "dependencies": {
    "adal-angular": "AzureAD/azure-activedirectory-library-for-js#9c4982ec76f324174423418be5fb6ca5b9f8b326",
    "powerbi-client": "2.3.1",
    "handlebars": "4.0.10",
    "clipboard": "1.7.1"
  }
}
